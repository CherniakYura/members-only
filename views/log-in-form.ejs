<% layout('layout') -%>
    <section class="title">
        <h1 class="form-header">
            <%= title %>
        </h1>
    </section>

   
        <form class="form" action="/log-in" method="POST">
            <fieldset>
                <legend>USERNAME</legend>
                <input required name="username"  type="text" maxlength="30" />
            </fieldset>

            <fieldset>
                <legend>PASSWORD</legend>
                <input required name="password" id="password" maxlength="30" />
            </fieldset>

            <input type="submit" class="bg-slate-500 m-4 hover:cursor-pointer text-white " value="Log in" />

        </form>




        <a class="cancel block" href="/">Cancel</a>
   