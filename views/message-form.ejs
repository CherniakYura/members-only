<% layout('layout') -%>
    <section class="title">
        <h1 class="form-header">
           Create Message
        </h1>
    </section>
    <form class=" form" action="" method="post">
        <input type="hidden" name="userid" value="<%= user._id %>">
        <fieldset>
            <legend>
               Title
            </legend>

            <input required type="text" name="title" placeholder="">
        </fieldset>
        <fieldset>
            <legend>
                Message
            </legend>
        
            <input required type="text" name="text" placeholder="">
        </fieldset>
        <input class="bg-slate-500 m-4 hover:cursor-pointer text-white" type="submit" value="Submit">
    </form>